# Example environment configuration file

# Application Settings
APP_CLI_ENABLED=true
APP_ROUTE_CLI_WEB=true

# HTTPS Settings

ALLOW_HTTP_REQUESTS=false
HTTPS_CERT_FILE=/path/to/cert.pem
HTTPS_KEY_FILE=/path/to/key.pem
HOST=0.0.0.0
PORT=8000

# Log Settings

LOGS_RETENTION_DAYS=365

SECRET_KEY=<generate-with-openssl-rand-hex-32>
DATABASE_URL=postgresql://user:pass@host/db
REDIS_URL=redis://localhost:6379
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=app-specific-password
FROM_EMAIL=noreply@yoursaas.com
ALLOWED_HOSTS=yoursaas.com,www.yoursaas.com